rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to news articles
    match /news/{document=**} {
      allow read: if true;
      allow write: if false; // Only allow writes from server/admin
    }
    
    // Allow public read access to matches collection
    match /matches/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Allow public read access to league table
    match /leagueTable/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Newsletter subscribers - allow write for new subscriptions
    match /newsletter_subscribers/{document=**} {
      allow read: if false; // Private data
      allow create: if true; // Allow anyone to subscribe
      allow update, delete: if false;
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
